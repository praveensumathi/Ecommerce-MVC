@model EcommerceMVC.ViewModel.ProductInpuModel

@{
    ViewData["Title"] = "Create";
}

<div style="width: -webkit-fill-available; justify-content: center;">
    <h1 style="display : flex;justify-content : center">Create Product</h1>
    <hr />
    <div style="display :flex;justify-content : center;align-items : center;flex-direction : column">
        <form asp-action="Create" class="productFields"
              style="display: flex;
            flex-direction : column;
            justify-content : center ;
            align-content : center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="custom-file-input" style="height : auto" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>

    
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
